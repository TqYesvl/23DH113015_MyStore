@model _23DH113015_MyStore.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">Xóa Danh Mục</h2>

<h3 class="bg-danger">Bạn có chắc chắn muốn xóa danh mục này không ?</h3>
<div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr/>
            <div class="form-group">
                <h4>Bạn thực sự muốn xóa danh mục này à?</h4>
            </div>
    
        <div class="form-group">
            <div class="control-label col-md-2">Tên danh mục</div>
                <div class="col-md-10">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xóa" class="btn btn-primary" />
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
        </div>
    }
</div>